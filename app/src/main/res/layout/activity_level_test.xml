<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_level_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cmsc436.mstests.LevelTestActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_x"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="23dp"
        android:layout_marginTop="46dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/display_y"
        android:layout_marginTop="27dp"
        android:layout_below="@+id/display_x"
        android:layout_alignStart="@+id/display_x" />

    <TextView
        android:layout_height="wrap_content"
        android:id="@+id/display_z"
        android:layout_width="wrap_content"
        android:layout_below="@+id/display_y"
        android:layout_alignStart="@+id/display_y"
        android:layout_marginTop="24dp" />

    <Button
        android:text="test start"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/level_test_start" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:textSize="20dp"
        android:id="@+id/score"
        android:layout_below="@+id/visual"
        android:layout_alignParentStart="true"
        android:layout_marginStart="12dp" />

    <TextView
        android:text="TextView"
        android:layout_height="match_parent"
        android:id="@+id/level_test_prompt"
        android:layout_width="match_parent"
        android:textSize="40sp"
        android:textStyle="bold"
        android:layout_below="@+id/level_test_start"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <cmsc436.mstests.LevelView
        android:layout_height="400dp"
        android:layout_width="match_parent"
        android:background="@drawable/bullseye"
        android:id="@+id/visual"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>
