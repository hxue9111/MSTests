<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tap Test"
        android:textSize="30dp"
        android:id="@+id/tap_test_start"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="SPIRAL TEST"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/spiral_test_start"
        android:layout_below="@+id/tap_test_start"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Level test"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/level_test_start"
        android:layout_below="@+id/spiral_test_start"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Bicep Leg Test"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:id="@+id/bicep_leg_test_start"
        android:layout_below="@+id/level_test_start"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="Bubble Test"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_bubble_button"
        android:layout_below="@+id/bicep_leg_test_start"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <Button
        android:text="Balance Test"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_balance_button"
        android:layout_below="@+id/start_bubble_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <Button
        android:text="Walking Test"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/walking_test_button"
        android:layout_below="@+id/start_balance_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <Button
        android:text="Path Time Test"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/start_path_time_test_button"
        android:layout_below="@+id/walking_test_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <Button
        android:text="Symbol test"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/symbol_test_button"
        android:layout_below="@+id/start_path_time_test_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />

    <Button
        android:text="Vibration test"
        android:textSize="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/vibration_test_button"
        android:layout_below="@+id/symbol_test_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp" />
</RelativeLayout></ScrollView>