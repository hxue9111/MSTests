<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_symbol_test"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="cmsc436.mstests.SymbolTestActivity">

    <TextView
        android:textSize="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please read the below this carefully "
        android:id="@+id/symbol_prompt"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/symbol_list"
        android:layout_alignStart="@+id/symbol_list" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/symbol_test_start"
        android:text="click here to start"
        android:textSize="30dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:visibility="visible" />

    <Button
        android:text="Speech Recognition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/speech"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:inputType="number"
        android:textSize="20dp"
        android:id="@+id/answer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/speech"
        android:layout_toStartOf="@+id/speech" />

    <ImageView
        android:adjustViewBounds="true"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/symbol_list2"
        android:id="@+id/symbol_list"
        android:layout_width="400dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="13dp" />

    <ImageView
        app:srcCompat="@drawable/num1"
        android:id="@+id/imageView1"
        android:layout_alignTop="@+id/symbol_list"
        android:layout_alignParentStart="true"
        android:layout_height="25dp"
        android:layout_width="36dp" />

    <ImageView
        android:layout_width="36dp"
        app:srcCompat="@drawable/num2"
        android:id="@+id/imageView2"
        android:layout_alignTop="@+id/symbol_list"
        android:layout_toEndOf="@+id/imageView1"
        android:layout_height="25dp" />

    <ImageView
        android:layout_width="36dp"
        app:srcCompat="@drawable/num3"
        android:id="@+id/imageView3"
        android:layout_alignTop="@+id/symbol_list"
        android:layout_toEndOf="@+id/imageView2"
        android:layout_height="25dp" />

    <ImageView
        app:srcCompat="@drawable/num4"
        android:id="@+id/imageView4"
        android:layout_width="36dp"
        android:layout_alignTop="@+id/symbol_list"
        android:layout_toEndOf="@+id/imageView3"
        android:layout_height="25dp" />

    <ImageView
        android:layout_width="36dp"
        app:srcCompat="@drawable/num5"
        android:id="@+id/imageView5"
        android:layout_alignTop="@+id/symbol_list"
        android:layout_centerHorizontal="true"
        android:layout_height="25dp" />

    <ImageView
        android:layout_width="36dp"
        app:srcCompat="@drawable/num6"
        android:id="@+id/imageView6"
        android:layout_alignTop="@+id/symbol_list"
        android:layout_toEndOf="@+id/imageView5"
        android:layout_height="25dp" />

    <ImageView
        android:layout_width="36dp"
        app:srcCompat="@drawable/num7"
        android:id="@+id/imageView7"
        android:layout_alignTop="@+id/symbol_list"
        android:layout_toEndOf="@+id/imageView6"
        android:layout_height="25dp" />

    <ImageView
        android:layout_width="36dp"
        app:srcCompat="@drawable/num8"
        android:id="@+id/imageView8"
        android:layout_alignTop="@+id/symbol_list"
        android:layout_toEndOf="@+id/imageView7"
        android:layout_height="25dp" />

    <ImageView
        android:layout_width="36dp"
        app:srcCompat="@drawable/num9"
        android:id="@+id/imageView9"
        android:layout_alignTop="@+id/symbol_list"
        android:layout_alignParentEnd="true"
        android:layout_height="25dp" />

    <TextView
        android:maxLines="5"
        android:id="@+id/temp2"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/symbol_prompt"
        android:layout_alignBottom="@+id/symbol_prompt"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:maxLines = "100"
        android:scrollbars = "vertical"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/result"
        android:layout_below="@+id/symbol"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/speech"
        android:layout_alignParentEnd="true" />

    <ImageView
        app:srcCompat="@drawable/num1"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/symbol"
        android:adjustViewBounds="false"
        android:layout_below="@+id/symbol_prompt"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
